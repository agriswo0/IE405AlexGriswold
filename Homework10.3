// Online C++ compiler to run C++ program online
#include <iostream>

int binary_search(int val, int * a, int first, int last){
    int center = (first+last)/2;
    
    if(a[center]==val){
        return center;
    }
    else if (a[center] > val){
        return binary_search(val, a, first, center-1);
    }
    else if (a[center] < val){
        return binary_search(val, a, center+1, last);
    }
    else {
        return -1;
    }
}
